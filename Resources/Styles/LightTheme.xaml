<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"                    
                    x:Class="WeatherApp.Resources.Styles.LightTheme">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../Styles/Colors.xaml" />
        <ResourceDictionary Source="../Styles/Styles.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Color x:Key="BackgroundGradientStart">#64AFFF</Color>
    <Color x:Key="BackgroundGradientEnd">white</Color>  
    <!-- Светлый голубой -->
    <Color x:Key="PrimaryTextColor">#000000</Color>
    <!-- Чёрный текст -->
    <Color x:Key="SecondaryTextColor">#666666</Color>
    <!-- Серый текст -->
    <Color x:Key="ButtonBackgroundColor">#039BE5</Color>
    <!-- Синяя кнопка 039BE5 -->
    <Color x:Key="ButtonTextColor">#FFFFFF</Color>
    <!-- Белый текст -->
    <Color x:Key="FrameBackgroundColor">#66FFFFFF</Color>
    <!-- полупрозрачный белый -->
    <Color x:Key="LogoTextColor">#FFFFFF</Color>
    <!-- Белый фон карточки -->
</ResourceDictionary>
